            </div>

            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.School)
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(m => m.School)
                </div>
                <div class="pull-right col-md-8 text-danger">
                    @Html.ValidationMessageFor(m => m.School)
                </div>
            </div>
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Create</button>
</form>

                    @Html.LabelFor(m => m.Age)
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(m => m.Age)
                </div>
                <div class="pull-right col-md-8 text-danger">
                    @Html.ValidationMessageFor(m => m.Age)
                </div>
            </div>
        </div>

        <div class="col-md-6">
